{
  "name": "diktate",
  "version": "0.1.0-mvp",
  "description": "Privacy-first voice dictation for Windows",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && tsc -p tsconfig.settings.json && copy /y src\\*.html dist\\ && copy /y src\\*.css dist\\ && copy /y src\\*.js dist\\ && electron . --dev",
    "start": "electron .",
    "build": "tsc && tsc -p tsconfig.settings.json && copy /y src\\*.html dist\\ && copy /y src\\*.css dist\\ && copy /y src\\*.js dist\\ && electron .",
    "dist": "pnpm run package-python && electron-builder",
    "package-python": "cd python && build_backend.bat",
    "test": "node tests/smoke-test.cjs && pytest python/"
  },
  "keywords": [
    "dictation",
    "voice",
    "transcription",
    "privacy"
  ],
  "author": "dIKtate Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.17.15",
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "zod": "^4.3.6"
  },
  "build": {
    "appId": "com.diktate.app",
    "productName": "dIKtate",
    "files": [
      "dist/**/*",
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "icon": "assets/icon.png",
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "python/dist/diktate-engine.exe",
        "to": "bin/diktate-engine.exe"
      }
    ]
  },
  "pnpm": {
    "overrides": {
      "tar": "^7.5.4",
      "lodash": "^4.17.23"
    }
  }
}